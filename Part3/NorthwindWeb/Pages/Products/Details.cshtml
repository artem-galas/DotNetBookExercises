@page "{id}"
@model NorthwindWeb.Pages.Products.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <div class="col-9">
        <h2 class="disaply-2">@Model.Product.ProductName</h1>
    </div>
    <div class="col-3">
        <a asp-page="./Index">Back</a>
    </div>
</div>

<div class="row">
        <ul class="list-group list-group-flush">
        <li class="list-group-item">Product Name: @Model.Product.ProductName</li>
        <li class="list-group-item">Unit Price: @Model.Product.UnitPrice</li>
        <li class="list-group-item">Units In Stock: @Model.Product.UnitsInStock</li>
        <li class="list-group-item">Units On Order: @Model.Product.UnitsOnOrder</li>
        <li class="list-group-item">Reorder Level: @Model.Product.ReorderLevel</li>
        <li class="list-group-item">Discontinued: @Model.Product.Discontinued</li>
    
    </ul>
</div>